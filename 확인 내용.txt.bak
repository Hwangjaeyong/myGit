    -- 암호화 함수 생성 (샘플)    
    DELIMITER $$

    DROP FUNCTION IF EXISTS F_THEBOMS_ENC;

    CREATE FUNCTION F_THEBOMS_ENC(user_id VARCHAR(64), target_text VARCHAR(64)) 
      RETURNS BLOB
    BEGIN
      RETURN HEX(AES_ENCRYPT(target_text, user_id));
    END;
    $$
    DELIMITER ;
