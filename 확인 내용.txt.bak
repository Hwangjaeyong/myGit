    -- 복호화 함수 생성 (샘플)
    DELIMITER $$

    DROP FUNCTION IF EXISTS F_THEBOMS_DEC;

    CREATE FUNCTION F_THEBOMS_DEC(user_id VARCHAR(64), target_column VARCHAR(64)) 
      RETURNS VARCHAR(64)
    BEGIN
      RETURN CONVERT(AES_DECRYPT(UNHEX(target_column), user_id) using utf8);
    END;
    $$
    DELIMITER ;
